<div class="row">
    <div class="span6">
        <a href="{{ path('story_edit', {id: story.id}) }}" class="btn btn-tys btn-small pull-left"><i class="icon-chevron-left icon-white"></i>{{ 'btn.back.name' | trans }}</a>
    </div>
    <div class="span6">
        {% if (story.items|length > 0) %}
            <a href="{{ path('story_publish', {id: story.id}) }}" class="btn btn-tys btn-small pull-right">{{ 'btn.publish.name' | trans }} <i class="icon-chevron-right icon-white"></i></a>
        {% else %}
            <a href="{{ path('story_publish', {id: story.id}) }}" class="btn btn-tys btn-small pull-right">{{ 'btn.publish_without_items.name' | trans }} <i class="icon-chevron-right icon-white"></i></a>
        {% endif %}
    </div>
    <div class="span6 offset6 text-right">
        ({{ 'btn.publish_without_items.help' | trans | raw }})
    </div>

</div>