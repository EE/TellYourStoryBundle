<div class="row choose five">
    <div class="span2 choose-audio">
        {% if (
            app.request.attributes.get('_route') == 'item_new'
            and
            (
                app.request.attributes.get('_route_params').type is defined
                and
                app.request.attributes.get('_route_params').type == 'audio'
            )
        ) %}
            {% set tag = 'span' %}
            <{{ tag }}>
        {% else %}
            {% set tag = 'a' %}
            <{{ tag }} href="{{ path('item_new', {'storyId': story.id, 'type': 'audio'}) }}">
        {% endif %}
            <figure><i class="icon"></i></figure>
            {{ 'story.addItem.types.audio' | trans }}
