{% extends 'EETYSBundle::base.html.twig' %}

{% block content %}
    <h1>{{ entity.type | capitalize }} Item</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>Name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>Files</th>
            <td>{% for filekey in entity.files %}
                    <img src="{{ filekey | imagine_filter('my_thumb') }}" alt=""/>
                {% endfor %}
            </td>
        </tr>
        <tr>
            <th>Createdat</th>
            <td>{{ entity.createdAt|date('Y-m-d H:i:s') }}</td>
        </tr>
        </tbody>
    </table>
    <div class="form-action">
        <form class="btn-group" action="{{ path('item_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <a class="btn" href="{{ path('item') }}">
                Back to the list
            </a>
            <a class="btn" href="{{ path('item_edit', { 'id': entity.id }) }}">
                Edit
            </a>
            <button class="btn btn-danger" type="submit">Delete</button>
        </form>
    </div>

{% endblock %}
