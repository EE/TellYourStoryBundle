{% extends 'EETYSBundle::base.html.twig' %}

{% block content %}
    <h1>Story edit</h1>

    <form action="{{ path('story_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT"/>
        {{ form_errors(edit_form) }}

        {{ form_widget(edit_form) }}
        <div class="form-actions">
            <button class="btn" type="submit">Edit</button>
            <a class="btn" href="{{ path('story') }}">
                Back to the list
            </a>
        </div>
    </form>
    <form class="pull-right" action="{{ path('story_delete', { 'id': entity.id }) }}" method="post">
        <input type="hidden" name="_method" value="DELETE"/>
        {{ form_widget(delete_form) }}
        <button class="btn" type="submit">Delete</button>
    </form>
{% endblock %}
