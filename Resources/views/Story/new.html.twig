{%  extends 'EETYSBundle::base.html.twig' %}

{% block content %}

    {% include 'EETYSBundle::Item/Component/steps.html.twig' %}

    <div class="page-header">
        <h1>{{ 'story.new.page_header.h1' | trans }}</h1>
    </div>
    <form class="form-horizontal form-tys" action="{{ path('story_create') }}" method="post" {{ form_enctype(form) }}>
        {{ form_errors(form) }}

        {{ form_widget(form) }}
        <div class="form-actions">
            <button type="submit" class="btn btn-tys btn-small pull-right">
                {{ 'btn.save_and_proceed.name' | trans }}
                <i class="icon-chevron-right icon-white"></i>
            </button>
        </div>
    </form>
{% endblock %}
