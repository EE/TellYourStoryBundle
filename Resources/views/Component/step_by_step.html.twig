<div id="step-by-step" class="grid-paper">
    <div class="container">
        <div class="row">
            <div class="span4 grid-paper">
                <div>
                    <h4>{{ 'default.homepage.step_by_step.tell' | trans | raw }}</h4>
                </div>
            </div>
            <div class="span4 grid-paper">
                <div>
                    <h4>{{ 'default.homepage.step_by_step.add' | trans | raw }}</h4>
                </div>
            </div>
            <div class="span4 grid-paper">
                <div>
                    <h4>{{ 'default.homepage.step_by_step.invite' | trans | raw }}</h4>
                </div>
                <a class="btn btn-tys btn-block{% if not(is_granted('IS_AUTHENTICATED_FULLY')) %} disabled{% endif %}"
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        href="{{ path('story_new') }}"
                    {% else %}
                        href="#" data-toggle="tooltip" title="{{ 'btn.error.login_first' | trans | raw }}" data-placement="top"
                    {% endif %}>
                    <i class="icon-plus-sign"></i>
                    {{ 'default.homepage.button.add_story.name' | trans | raw }}
                </a>
            </div>
        </div>
    </div>
</div>